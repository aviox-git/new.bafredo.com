{% extends "layouts/front.twig" %}
{% block styles %}
	<style type="text/css">
		.facebook {
			width: 100% !important;
		}
		.askPassModal {
			width: 550px;
			height: 200px;
			margin: 50px auto;
			background: #eeeeee;
			box-shadow: 0px 0px 8px #ed6a00;
			padding: 30px 27px;
		}
		.askPassModal #btnModalContinue {
			background: #ed6a00;
			border: none;
			width: 100%;
			height: 40px;
			color: #FFFFFF;
			font-weight: bold;
			font-size: 18px;
			font-weight: bold;
			text-transform: uppercase;
		}
		.login-frame {
			width: 650px;
			height: 440px;
			padding: 34px 24px 39px 24px;
			background: #FFFFFF;
			margin: 50px auto;
			-webkit-box-shadow: 0px 0px 15px #d3d3d3;
			box-shadow: 0px 0px 15px #d3d3d3;
		}
		.login-frame .left-box {
			width: 301px;
			height: 366px;
			border-right: 1px solid #D2D2D2;
			padding-right: 28px;
			margin-right: 28px;
			position: relative;
		}
		.login-frame .right-box {
			width: 273px;
			height: 366px;
			position: relative;
		}
		.login-frame .btn-frame {
			height: 68px;
			width: 273px;
			position: absolute;
			bottom: 0;
		}
		.login-frame .btn-reg {
			height: 45px;
			width: 100%;
			display: block;
			background: #1d8229;
			color: #FFFFFF;
			font-size: 16px;
			text-align: center;
			line-height: 45px;
			border-radius: 3px;
		}
		.login-frame .facebook-btn {
			height: 45px;
			width: 100%;
			display: block;
			cursor: pointer;
			background: #405993;
			color: #FFFFFF;
			font-size: 16px;
			text-align: center;
			line-height: 45px;
			border-radius: 3px;
		}
		.login-frame .or-line {
			height: 21px;
			margin: 10px 0 12px 0;
			position: relative;
		}
		.login-frame .or-line b {
			display: block;
			border-bottom: 1px solid #D2D2D2;
			position: absolute;
			top: 10px;
			width: 100%;
		}
		.login-frame .or-line span {
			display: block;
			background: #FFFFFF;
			width: 40px;
			position: absolute;
			left: 50%;
			margin-left: -20px;
			text-align: center;
			font-size: 16px;
			color: #313131;
		}
		.login-frame .form-group input {
			padding-left: 18px;
			margin: 0;
			width: 226px;
			border: none;
			line-height: 45px;
			font-size: 14px;
			height: 45px;
			-webkit-box-shadow: none;
			box-shadow: none;
		}
		.login-frame .login-btn {
			height: 45px;
			width: 100%;
			display: block;
			background: #1d8229;
			color: #FFFFFF;
			font-size: 16px;
			text-align: center;
			line-height: 45px;
			border-radius: 3px;
			border: none;
		}
		.login-frame .forgot-pwd-btn {
			height: 45px;
			width: 100%;
			display: block;
			text-align: right;
			margin-top: 8px;
			color: #23a1d1;
		}
		.login-frame .mail-input {
			width: 100%;
			height: 45px;
			border: 1px solid #D2D2D2;
			margin-bottom: 20px;
			overflow: hidden;
		}
		.login-frame .mail-input input {
			padding-left: 18px;
			margin: 0;
			width: 226px;
			border: none;
			line-height: 45px;
			font-size: 14px;
			height: 45px;
			-webkit-box-shadow: none;
			box-shadow: none;
		}
		.login-frame .pwd-input {
			width: 100%;
			height: 45px;
			border: 1px solid #D2D2D2;
			overflow: hidden;
		}
		.login-frame .pwd-input input {
			padding-left: 28px;
			margin: 0;
			width: 226px;
			border: none;
			line-height: 45px;
			font-size: 14px;
			height: 45px;
			-webkit-box-shadow: none;
			box-shadow: none;
		}
        .alert-red {
            color: #B40005;
        }
	</style>
{% endblock %}
{% block content %}
	<div class="container-fluid">
		<div class="login-frame" id="login-form">
			<div class="row">
				<div class="col-xs-12 col-md-6 right-box">
					<h3>Forgot Password</h3>
					<form action="{{ base_url('login/forgotpassword') }}" method="post">
                        <div class="md-form mb-5">
                            <label data-error="wrong" data-success="right" for="orangeForm-name">Email</label>
                            <input type="text" id="email" required name="email" class="form-control validate">

                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-default" >
                            <button type="button" class="btn btn-default" id="anotherWay">Try another way</button>
                        </div>
                </div>
                </form>
				
				</div>
			</div>
		</div>
		<div class="login-frame" id="forgot-password" style="display:none">
			<div class="row">
				<div class="col-xs-12 col-md-6 right-box">
					<h3>identify Yourself</h3>
					<form action="{{ base_url('add-review') }}" method="post">
                       <div class="md-form mb-5">
                            <label data-error="wrong" data-success="right" for="orangeForm-name">Password</label>
                            <input type="password" id="password" required name="email" class="form-control validate">

                        </div>
                        
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-default" >
                          
                        </div>
                </div>
                </form>
				
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block scripts %}
	<script>
        $(document).on('click', '#anotherWay', function(){
           alert("hi");
           $('#login-form').css('display','none'); 
           $('#forgot-password').css('display','block'); 
        });


	</script>
{% endblock %}
