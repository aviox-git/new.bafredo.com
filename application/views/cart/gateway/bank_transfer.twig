{% extends "layouts/front.twig" %}
{% block styles %}
    <style>
        .lineFrame h2 {
            color: #0f054a;
            font-size: 30px;
            font-weight: bold;
        }
        .bodyFrame .pc .shoppingNavFrame {
            width: 100%;
            height: 89px;
            position: relative;
        }
        .bodyFrame .pc .shoppingNavFrame b {
            display: block;
            position: absolute;
            font-size: 30px;
            color: #0f054a;
            top: 35px;
        }
        .bodyFrame .pc .shoppingNavFrame ul {
            position: absolute;
            top: 27px;
            right: 0;
        }
        .bodyFrame .pc .shoppingNavFrame ul .select {
            border-bottom: 4px solid #ED6A00;
            color: #ED6A00;
        }
        .bodyFrame .pc .shoppingNavFrame ul .select {

            color: #ED6A00;

        }
        .bodyFrame .pc .shoppingNavFrame ul li {
            color: #707070;
            font-size: 18px;
            font-weight: bold;
            width: 166px;
            float: left;
            margin-left: 20px;
            border-bottom: 4px solid #A2A2A2;
            line-height: 30px;
            text-align: center;
        }
        .bodyFrame .pc .shoppingNavFrame ul li {
            color: #707070;
            font-size: 18px;
            font-weight: bold;
            line-height: 30px;
            text-align: center;
        }
        .bodyFrame .pc .lineFrame {
            width: 1200px;
            min-height: 40px;
            position: relative;
        }
        .cart-table th, td {
            color: #535353;
            font-size: 18px;
        }
        .cart-table td:last-child,
        .cart-table th:last-child {
            text-align: right;
        }
        .cart-footer td {
            padding-left: 100px;
            padding-bottom: 10px;
            color: #535353;
            font-size: 18px;
        }
        .cart-footer .btn-contine button {
            width: 250px;
        }
        .cart-table img {
            width: 94px;
            height: 63px;
            padding: 0;
            margin: 0;
            border: none;
            border-radius: 0;
        }
        .btn-confirm {
            display: block;
            width: 250px;
            height: 49px;
            line-height: 49px;
            background: #1d8229;
            border: solid 1px #1d8229;
            color: #FFFFFF;
            font-size: 20px;
            text-align: center;
            font-weight: bold;
            cursor: pointer;
        }
        .red-asterisk {
            color: red;
        }
        .sec-shipping-method label,
        .sec-payment-method label,
        .sec-agreement label {
            font-size: 14px;
        }
        .strong {
            font-weight: bold;
        }
    </style>
{% endblock %}
{% block content %}
     <section class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-12">
                    <div class="breadcrumb-area">
                        <nav aria-label="breadcrumb" class="comn-breadcrumb-nav">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#"><i class="fa fa-home pr-2"></i>Home</a></li>
                                <li class="breadcrumb-item"><a href="#">Cart</a></li>
                                <li class="breadcrumb-item"><a href="#">Checkout</a></li>
                                <li class="breadcrumb-item" aria-current="page">Confirm Payment</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
     <section class="confirm-order-section py-5">
        <div class="container">
            <h2 class="comn-payment-heading">Confirm Order</h2>
            <div class="row">
                <div class="col-12 col-md-12">
                    <div class="confirm-order-area">
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Order Number:</th>
                                        <td>{{ order.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Date:</th>
                                        <td>{{ order.created_at }}</td>
                                  
                                    </tr>
                                    <tr>
                                        <th>Total:</th>
                                        <td>{{ order.total + charge }}</td>
                                   
                                    </tr>
                                    <tr>
                                        <th>Payment method:</th>
                                        <td>{{ order.payment_method | replace({'_': " "}) | upper }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="proceed-alert-area">
                            <!--div class="alert alert-danger" role="alert">
                                You cannot proceed because your amount is less then TZS 1000, which does not satisfy tigopesa min amount limit.
                            </div-->
                            <form>
                                <div class="form-group mt-4">
                                    <label for="email" class="mb-0">Tigopesa Phone Number:</label>
                                    <input type="text" class="form-control" id="email" value="" placeholder="Example: 0656897425">
                                </div>                                
                            </form>
                        </div>  
                        <button type="submit" class="comn-btn">Pay Now</button>
                    </div>
                    <div class="bank-detail-area">
                        <h2 class="comn-payment-heading">Bank Details</h2>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                 <tbody>
                                    <tr>
                                        <td class="strong">Bank Name</td>
                                        <td>CRDB</td>
                                        <td>NMB</td>
                                    </tr>
                                    <tr>
                                        <td class="strong">Branch</td>
                                        <td>UDSM</td>
                                        <td>University</td>
                                    </tr>
                                    <tr>
                                        <td class="strong">SWIFT CODE</td>
                                        <td>CORUTZTZ</td>
                                        <td>NMIBTZTZ</td>
                                    </tr>
                                    <tr>
                                        <td class="strong">Address</td>
                                        <td>CRDB Bank PLC, P. O. Box 268, Dar es Salaam, TANZANIA</td>
                                        <td>P. O. Box 35199, Dar es Salaam, TANZANIA</td>
                                    </tr>
                                    <tr>
                                        <td class="strong">Account Name</td>
                                        <td>BAFREDO Electronics Limited</td>
                                        <td>BAFREDO Electronics Limited</td>
                                    </tr>
                                    <tr>
                                        <td class="strong">Account Number</td>
                                        <td>0150345034100</td>
                                        <td>20810006506</td>
                                    </tr>
                               </tbody>
                            </table>
                        </div>  
                        <button type="button" class="comn-btn mt-4 btn-confirm" data-toggle="modal" data-target="#myModal">Confirm</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="modal-body text-center">
                        <div class="tick_icon"><img src="{{ asset('front/image/tick.png') }}" alt="icon"/></div>
                            <p> Your order has been received. Shipping arrangements will immediately be made upon confirmation of the payment.</p>
                            <a class="btn btn-default"  href="{{ base_url('/account/order_history') }}">Ok</a>
                        </div>
                    </div>
                </div>
            </div>
       </div>
    </div>

{% endblock %}