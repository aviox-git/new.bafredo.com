{% block content %}
	<section class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-12">
                    <div class="breadcrumb-area">
                        <nav aria-label="breadcrumb" class="comn-breadcrumb-nav">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#"><i class="fa fa-home pr-2"></i>Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Login</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="account-section">
        <div class="container phoneNumber">
            <div class="row">
                <div class="col-12 col-md-6">
                    <form action="{{ base_url('login/matchQuestion') }}" method="post">
                        <div class="md-form mb-5">
                        <input tupe="text" name="id" value="{{questions.0.user_id}}">
                        {% for questions in questions %}
                            <label data-error="wrong" data-success="right" for="orangeForm-name">{{ questions.question }}</label>

                            <input type="text" id="phone" required name="answer[{{questions.id}}]" class="form-control validate">
                        {% endfor %}

                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-default" >
                            <button type="button" class="btn btn-default" id ="confirmPhone">Close</button>
                        </div>
                       
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
